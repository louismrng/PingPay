{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "PingPay",
    "Audience": "PingPay",
    "ExpiryMinutes": "60"
  },
  "Database": {
    "MaxRetryCount": 3,
    "CommandTimeout": 30
  },
  "Redis": {
    "InstanceName": "pingpay:",
    "DefaultExpiryMinutes": 60
  },
  "Solana": {
    "Commitment": "confirmed",
    "MaxRetries": 3
  },
  "Otp": {
    "CodeLength": 6,
    "ExpiryMinutes": 5,
    "MaxAttempts": 3,
    "ResendCooldownSeconds": 60
  },
  "RateLimit": {
    "OtpRequestsPerHour": 5,
    "LoginAttemptsPerHour": 10,
    "TransactionsPerHour": 20,
    "ApiRequestsPerMinute": 60
  },
    "KeyManagement": {
      "Provider": "Local"
    },
    "Cors": {
      "AllowedOrigins": ["http://localhost:3000"]
    },
    "Telegram": {
      "BotToken": "",
      "WebhookUrl": "",
      "UsePolling": false
    },
    "Signal": {
      "PhoneNumber": "",
      "SignalCliPath": "/usr/bin/signal-cli",
      "ApiEndpoint": "http://localhost:8080"
    }
  }
